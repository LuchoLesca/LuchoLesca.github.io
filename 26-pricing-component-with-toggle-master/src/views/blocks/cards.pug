include ../mixins/card

- 
    cards = [
        {
            title: "Basic",
            prices: {
                "monthly": "19.99",
                "annually": "199.99"
            },
            features: ["500 GB Storage", "2 Users Allowed", "Send up to 3 GB"],
        },
        {
            title: "Professional",
            prices: {
                "monthly": "24.99",
                "annually": "249.99"
            },
            features: ["1 TB Storage", "5 Users Allowed", "Send up to 10 GB"],
            classModifier: ["card--magent"]
        },
        {
            title: "Master",
            prices: {
                "monthly": "39.99",
                "annually": "399.99"
            },
            features: ["2 TB Storage", "10 users Allowed", "Send up to 20 GB"],
        },
    ]

section.cards
    each typeOfPrice in ["annually", "monthly"]
        each card in cards
            +card(card.title, card.prices[typeOfPrice], card.features, card.classModifier, typeOfPrice)